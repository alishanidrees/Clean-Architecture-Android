    <style name="CalenderViewCustom" parent="android:Widget.CalendarView">
        <item name="colorAccent">@color/app_green</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorControlActivated">@color/app_green</item>
       <!-- <item name="android:textColor">@color/date_color_selector_night</item>-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:calendarTextColor">@color/red</item>
        <item name="android:focusedMonthDateColor">@color/white</item>
        <item name="android:weekNumberColor">@color/black</item>
        <item name="android:selectedWeekBackgroundColor">@color/white</item>
        <item name="android:selectedDateVerticalBar">@color/white</item>
        <item name="android:unfocusedMonthDateColor">@color/white</item>

    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen backgroundanimated iconand animation duration.
        <item name="windowSplashScreenBackground">@color/primary_color_2</item>
        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
       <!-- <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo_main</item>-->
        <item name="windowSplashScreenAnimationDuration">0</item>
        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.Tawkeel</item>
