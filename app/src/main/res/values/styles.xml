<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMinor">50%</item>
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:maxHeight">@dimen/_400sdp</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/ic_launcher_background</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CommonButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/s20</item>
        <item name="android:background">@drawable/common_button_background</item>
        <item name="android:fontFamily">@font/domaine_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>

    </style>
    <style name="BoldFont">
        <item name="android:fontFamily">@font/domine_bold</item>
    </style>

    <style name="LightFont">
        <item name="android:fontFamily">@font/domaine_text_light</item>
    </style>

    <style name="RegularFont">
        <item name="android:fontFamily">@font/domaine_display_regular</item>
    </style>

    <style name="MediumFont">
        <item name="android:fontFamily">@font/domaine_text_medium</item>
    </style>


</resources>